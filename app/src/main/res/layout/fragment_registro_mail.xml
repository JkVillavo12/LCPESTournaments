<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mm"
    android:gravity="center"
    android:padding="@dimen/padding_horizontal_L"
    tools:context="com.jkvillavo12dev.lcpestournaments.fragments.registro.RegistroMailFragment">

    <TextView
        android:id="@+id/registroMail_textView"
        style="@style/mw"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_vertical_L"
        android:text="@string/registroCorreoTexto"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/registroMail_textInputLayoutMail"
        style="@style/mw"
        android:layout_below="@id/registroMail_textView"
        android:layout_marginBottom="@dimen/margin_vertical_S">

        <EditText
            android:id="@+id/registroMail_editTextMail"
            style="@style/mw"
            android:hint="@string/registroCorreo"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
